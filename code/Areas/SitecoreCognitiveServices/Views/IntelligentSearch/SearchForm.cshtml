@using SitecoreCognitiveServices.Feature.IntelligentSearch.Statics
@model Sitecore.Mvc.Presentation.RenderingModel

<script src="/Areas/SitecoreCognitiveServices/Assets/js/SitecoreCognitiveServices.Feature.IntelligentSearch.SearchForm.js"></script>

<div class="frame search-form">
    <div class="headline">
        <span class="blue">S</span>
        <span class="red">e</span>
        <span class="yellow">a</span>
        <span class="blue">r</span>
        <span class="green">c</span>
        <span class="red">h</span>
    </div>
    <form class="form" method="post" action="/SitecoreCognitiveServices/IntelligentSearch/SearchFormPost"
          dialog-action="/SitecoreCognitiveServices/IntelligentSearch/SearchFormLuisPost"
          suggestion-action="/SitecoreCognitiveServices/IntelligentSearch/GetSuggestions">
        <fieldset>
            <div class="dialog-state">
                <div class="value"></div>
                <div class="cancel">&#10006;</div>
            </div>
            <div class="dialog-wrap">
                <div class="search-chat"></div>
                <input class="search-input" type="text" />
                <button class="search-submit scButton">@Translator.Text("SearchForm.Submit")</button>
                <div class="search-suggest" name="suggestions"></div>
                <div class="search-state">
                    <div class="key">
                        @Translator.Text("SearchForm.SearchStateLabel"):
                    </div>
                    <div class="value"></div>
                    <div class="cancel">&#10006;</div>
                </div>
            </div>
            <div class="search-context">
                <input type="hidden" name="id" id="id" value="@Model.Rendering.DataSource" />
                <input type="hidden" name="db" id="db" value="web" />
                <input type="hidden" name="language" id="language" value="@Request.QueryString["language"]" />
            </div>
        </fieldset>
    </form>
    <div class="result-wrap">
        <div class="list-panel">
            <div class="answer-box">
                <div class="answer-box-inner"></div>
            </div>
            <div class="knowledge-panel">
                <div class="knowledge-panel-inner"></div>
            </div>
            <div class="search-no-results">
                @Translator.Text("SearchForm.NoResults")
            </div>
            <div class="search-results">

            </div>
        </div>        
    </div>
    @Html.Partial("/Areas/SitecoreCognitiveServices/Views/IntelligentSearch/_ProgressIndicator.cshtml")
</div>